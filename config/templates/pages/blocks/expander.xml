<?xml version="1.0"?>
<template xmlns="http://schemas.sulu.io/template/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <properties>
        <block name="blocks">
            <types>
                <type name="expander">
                    <meta>
                        <title lang="en">expandable element</title>
                        <title lang="de">Expandable Element</title>
                    </meta>
                    <properties>



                        <xi:include href="styletab_lib.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                        xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types/sulu:type[@name='styletab_lib']/sulu:properties/sulu:property[@name='currentTab'])" />
        
                        <property name="style_presets" type="dekor_selection"  visibleCondition="__parent.currentTab == 'styles'">
                            <meta>
                                <title>Style-Preset</title>
                            </meta>
                            <params>
                                <param name="request_parameters" type="collection">
                                    <param name="blockType" value="expander"/>
                                </param>
                            </params>
                        </property>

                        
                        <xi:include href="styletab_lib.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                        xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types/sulu:type[@name='styletab_lib']/sulu:properties/sulu:property[@name='classes'])" />

                        <xi:include href="styletab_lib.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                        xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types/sulu:type[@name='styletab_lib']/sulu:properties/sulu:property[@name='note'])" />
                        
                        <xi:include href="styletab_lib.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                        xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types/sulu:type[@name='styletab_lib']/sulu:properties/sulu:property[@name='bp_sm'])" />
                        
                        <xi:include href="styletab_lib.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                        xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types/sulu:type[@name='styletab_lib']/sulu:properties/sulu:property[@name='bp_md'])" />

                        <xi:include href="styletab_lib.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                        xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types/sulu:type[@name='styletab_lib']/sulu:properties/sulu:property[@name='bp_lg'])" />

                       

                        <property name="title" type="text_line" mandatory="true" visibleCondition="__parent.currentTab == 'content'">
                            <meta>
                                <title>Headline</title>
                            </meta>
                            <params>
                                <param name="headline" value="true" />
                            </params>
                
                            <tag name="sulu.rlp.part" />
                            <tag name="sulu.block_preview" priority="100" />

                        </property>

                        <block name="maincol" default-type="textblock" minOccurs="1" cssClass="my_col" visibleCondition="__parent.currentTab == 'content'">

                            <meta>
                                <title lang="en">Inhalte</title>
                                <title lang="de">Inhalte</title>
                            </meta>

                            <xi:include href="toplevel_blocklist_no_expander.xml" xpointer="xmlns(sulu=http://schemas.sulu.io/template/template)
                                xpointer(/sulu:template/sulu:properties/sulu:block[@name='blocks']/sulu:types)" />


                        </block>
                       

                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>
