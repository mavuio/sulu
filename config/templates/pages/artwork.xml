<?xml version="1.0"?>
<template xmlns="http://schemas.sulu.io/template/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>artwork</key>

    <view>pages/artwork</view>
    <controller>App\Controller\Website\CustomController::indexAction</controller>

    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="en">Artwork</title>
        <title lang="de">Artwork</title>
    </meta>


    <properties>
    

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp" />
        </property>




        <property name="title" type="text_line" mandatory="true" colspan="5">
            <meta>
                <title>Titel</title>
            </meta>


            <tag name="sulu.rlp.part" />

        </property>
      


        <property name="artist" type="text_line" colspan="5">
            <meta>
                <title>Künstler</title>
            </meta>
            <tag name="sulu.search.field"/>

        </property>


        <property name="year" type="text_line" colspan="2">
            <meta>
                <title>Jahr</title>
            </meta>
            <tag name="sulu.search.field"/>

        </property>
        
      
        <property name="image" type="single_media_selection">
            <meta>
                <title>Image</title>
            </meta>
            <params>
                <param name="types" value="image" />
                <param name="image_size" value="800x400" />
            </params>
        </property>


        <property name="category" type="single_select"  >
            <meta>
                <title>Kategorie</title>
            </meta>
        
            <params>                        
                <param name="values" type="collection">
                    <param name="classic_modern">
                        <meta>
                            <title>Klassische Moderne</title>
                        </meta>
                    </param>
        
                    <param name="contemporary">
                        <meta>
                            <title>Zeitgenössische Kunst</title>
                        </meta>
                    </param>

                    <param name="applied_arts">
                        <meta>
                            <title>Angewandte Kunst und Design</title>
                        </meta>
                    </param>

                </param>
            </params>
        </property>

        <property name="text" type="text_editor">
            <meta>
                <title>Text</title>
            </meta>
            <tag name="sulu.search.field"/>
        </property>

        
        <property name="facts" type="text_editor">
            <meta>
                <title>Facts</title>
            </meta>
            <tag name="sulu.search.field"/>
        </property>


    </properties>
</template>
