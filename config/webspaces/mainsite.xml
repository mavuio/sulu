<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.1.xsd">
    <!-- See: http://docs.sulu.io/en/latest/book/webspaces.html how to configure your webspace-->

    <name>home</name>
    <key>mainsite</key>

    <localizations>
        <localization language="de" default="true"></localization>
        <localization language="en" ></localization>
    </localizations>

    <default-templates>
        <default-template type="page">default</default-template>
        <default-template type="home">default</default-template>
    </default-templates>

    <templates>
        <template type="search">search/search</template>
        <!-- See: http://docs.sulu.io/en/latest/cookbook/custom-error-page.html how to create a custom error page -->
        <template type="error">error/error</template>
    </templates>

    <security>
        <system>Website</system>
    </security>
    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="en">Main Navigation</title>
                    <title lang="de">Hauptnavigation</title>
                </meta>
            </context>
            <context key="footer">
                <meta>
                    <title lang="en">Footer Navigation</title>
                    <title lang="de">Footer-Navigation</title>
                </meta>
            </context> 
        </contexts>
    </navigation>

    <portals>
        <portal>
            <name>reference_sulu.mavu.io</name>
            <key>mainsite</key>

            <environments>
                <environment type="stage">
                    <urls>
                        <url language="de">reference_sulu.mavu.io</url>
                        <url language="en">reference_sulu.mavu.io/{language}</url>
                    </urls>
                </environment>
                <environment type="prod">
                    <urls>
                        <url language="de">reference_sulu.mavu.io</url>
                        <url language="en">reference_sulu.mavu.io/{language}</url>
                    </urls>
                    <custom-urls>
                        <custom-url>reference_sulu.mavu.io/*</custom-url>
                        <custom-url>cms.reference_sulu.mavu.io/*</custom-url>
                    </custom-urls>
                </environment>
                <environment type="test">
                    <urls>
                        <url language="de">{host}</url>
                        <url language="en">{host}/{language}</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url language="de">reference_sulu.mavu.io.test</url>
                        <url language="en">reference_sulu.mavu.io.test/{language}</url>
                    </urls>
                    <custom-urls>
                        <custom-url>reference_sulu.mavu.io.test/*</custom-url>
                    </custom-urls>
                </environment>
            </environments>
        </portal>
    </portals>
</webspace>
