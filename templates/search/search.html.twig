{% extends "base.html.twig" %}

{% block content %}
{% set lang=app.request.locale|split('_')[0] %}
<div class="ce ce-searchresult">
    

    <h2  class="mb-6">Suche</h2>

    <form action="{{ path('sulu_search.website_search') }}" method="GET">
        <input name="q" type="text" placeholder="Search"  value="{{query}}" class="max-w-full w-96"/>
        <input type="submit" value="Go"/>
    </form>

    {% if query %}
        
        <h4  class="mt-6 mb-4">Showing {{ hits|length }} results for "{{ query }}"</h4>
    
        <ul  class="ml-4 list-disc">
            {% for i, hit in hits %}
                <li>
                    <a href="{{ hit.document.url }}"  class="underline">
                        {{- hit.document.title -}}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

</div>
{% endblock %}
