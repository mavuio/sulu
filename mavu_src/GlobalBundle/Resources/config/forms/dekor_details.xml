<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>dekor_details</key>

    <properties>
        <property name="blockType" type="select"  colspan="4">
            <meta>
                <title lang="en">Block-Type</title>
            </meta>
        
            <params>
                <param name="default_value" type="expression" value="service('Mavu\\GlobalBundle\\Content\\Select\\BlockTypeSelect').getSingleSelectDefaultValue()"/>
                <param name="values" type="expression" value="service('Mavu\\GlobalBundle\\Content\\Select\\BlockTypeSelect').getValues(locale)"/>
            </params>
        </property>
        
        <property name="name" type="text_line" mandatory="true" colspan="8">
            <meta>
                <title>Name</title>
            </meta>
        </property>


        <property name="classes" type="text_area"  colspan="12" visibleCondition="__parent.useRawCss != true">
            <meta>
                <title>TailwindCSS -  Classes</title>
            </meta>
        </property>

        <property name="useRawCss" type="checkbox">
            <params>
                <param name="label">
                    <meta>
                        <title>use raw CSS</title>
                    </meta>
                </param>
                <param name="type" value="toggler" />
            </params>
        </property>


        <property name="rawCss" type="text_area"  colspan="12" visibleCondition="__parent.useRawCss == true">
            <meta>
                <title>raw CSS (PostCSS Format)</title>
            </meta>
        </property>

         
        <property name="notes" type="text_area"  colspan="12">
            <meta>
                <title>Description</title>
            </meta>
        </property>

        <property name="slug" type="text_line"  colspan="6">
            <meta>
                <title>unique classname (used for twig-templates)</title>
            </meta>
        </property>

        <property name="ignoreDefaults" type="checkbox">
            <params>
                <param name="label">
                    <meta>
                        <title>do not use default styles</title>
                    </meta>
                </param>
                <!-- <param name="type" value="toggler" /> -->
            </params>
        </property>

    </properties>
</form>
